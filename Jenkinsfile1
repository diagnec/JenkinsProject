 pipeline {
    agent any

    environment {
        SONARQUBE_SERVER = 'SonarQube'   // Nom de ton serveur Sonar dans Jenkins
        SONARQUBE_TOKEN = credentials('CheikhTockenFilRouge')  // ID de ton credential
        SONARQUBE_key="FileRouge"
    }

    stages {
        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }
       
        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv("${SONARQUBE_SERVER}") {
                    script {
                        def scannerHome = tool 'SonarScanner' // <- Ici on charge SonarScanner installÃ© dans Jenkins
                        bat """
                            ${scannerHome}/bin/sonar-scanner.bat
                               -D"sonar.projectKey="${SONARQUBE_key}" 
                               -D"sonar.sources=."
                               -D"sonar.host.url=http://localhost:9000" 
                               -D"sonar.token="${SONARQUBE_TOKEN}"
                        """
                    }
                }
            }
        }
    }
}
